/* pages/suggest/suggest.wxss */
.sel-box{
  margin: 30rpx 50rpx;
  padding: 20rpx 20rpx;
  border: 2rpx solid #D9D9D9 ;
  border-radius: 10rpx;
}
.picker:after{    
  content:'';
  width:0;
  height:0;
  border-style:solid;
  border-width:20rpx;
  border-color:#9A9A9A transparent transparent transparent;
  right:80rpx;
  position:absolute;
  margin-top:10rpx;
}

.txt{
  margin: 10rpx 0rpx 0rpx 20rpx;
  color: #1E4370;
  font-weight: 700;
}
.label-box{
  border-color: #D9D9D9;
  border-style: solid;
  border-width: 0rpx 0rpx 2rpx 0rpx;
  height: 80rpx;
}
.list-box{
  margin: 30rpx 50rpx;
  border: 2rpx solid #D9D9D9 ;
  border-radius: 10rpx
}
.list-box view:last-child{border:none;}

.check-box {
  margin:20rpx;
  line-height: 80rpx;
}
.textarea-box{
  margin: 30rpx 50rpx;
  padding: 20rpx 20rpx;
  border: 2rpx solid #D9D9D9 ;
  border-radius: 10rpx;
  height:100rpx
}

.picker{
  display:inline;
}
.btn-submit{
  background:#199ED8;
  color:#FFFFFF;
  height: 100rpx;
  line-height:100rpx;
  margin:20rpx 20rpx;
}