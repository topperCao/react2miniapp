
page {
  display: flex;
  flex-direction: column;
  position: relative;
  background-color: #f2f2f2;
}

.container {
  flex: 1;
  overflow: scroll;
  width: 100%;
}

.title {
  border-bottom: 1rpx solid orange;
  text-align: center;
  width: 60%;
  margin: 20rpx auto;
  color: orange;
}

.date {
  color:orange;
  width: 300rpx;
  float: right;
  text-align: right;
  margin-right: 40rpx;
}

.clear {
  clear: both;
}

.textarea {
  padding: 10rpx;
  border: 1rpx solid orange;
  width: 90%;
  height: 600rpx;
  margin: 40rpx auto;
  border-radius: 20rpx;
  color: orange;
}

.textarea textarea {
  width: 100%;
}

.btns {
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 40rpx;
}

.btns .btn {
  margin: 20rpx auto;
  background-color: orange;
  color: white;
  width: 200rpx;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  border-radius: 10rpx;
}


.noborder {
  border: none;
}
